    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ build and debug GRconsole",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/grconsole_debug",
            "args": [
                "list"
            ],
            "stopAtEntry": false,
            "cwd": "/home/antonio/.frfuzz/projects/binutils/2.22/default",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build GRconsole",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}